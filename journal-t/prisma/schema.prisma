// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

model user {
    id    String
    email String @unique
}

model journal {
    id        String   @id
    title     String
    createdAt DateTime @default(now())
    content   String
    tag       String?

    @@index([id])
}
