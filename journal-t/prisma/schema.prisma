// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

model User {
    id      String  @unique
    email   String
    entries Entry[]
}

model Entry {
    id        String   @id
    title     String
    createdAt DateTime @default(now())
    content   String
    tag       String?
    User      User     @relation(fields: [userId], references: [id])
    userId    String

    @@index([id])
}
